<h1>Register With Survery Gorilla</h1>

<% if @user.errors.any? %>
<%= erb :"_errors", locals: {errors: @user.errors} %>
<% end %>

<div class="user-registration-form">
  <form method="POST" action="/users">

      <p><label for="first_name">First Name:</label>
      <input type="text" name="user[first_name]"></p>

      <p><label for="last_name">Last Name:</label>
      <input type="text" name="user[last_name]"></p>

      <p><label for="username">Username:</label>
      <input type="text" name="user[username]"></p>

      <p><label for="email">Email:</label>
      <input type="email" name="user[email]"></p>

      <p><label for="password">Password:</label>
      <input type="password" name="user[password]"></p>
      <input type="submit" value="Sign up"></p>

  </form>
</div>
