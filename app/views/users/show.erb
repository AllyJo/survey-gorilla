<h2><%= @user.first_name %>'s Surveys</h2>

<% if @user.surveys.any? %>
<% @user.surveys.each do |survey| %>
  <ul class="show-user-survey-title">
    <li id="<%= survey.id %>"><a href="/surveys/<%= survey.id %>/responses"><i class="fa fa-arrow-circle-down" aria-hidden="true"></i></a> <%= survey.title %></li>
  </ul>
  <% end  %>
<% end %>

<h2>Taken Surveys</h2>
<div class="taken-list">
  <% if @user.taken_surveys.any? %>
    <ul>
    <% @user.taken_surveys.each do |survey| %>
      <li><%= survey.title %></li>
    <% end %>
    </ul>
  <% end %>
</div>

<h2 id="create-survey-link"><a href="/surveys/new">Create New Survey</a></h2>
