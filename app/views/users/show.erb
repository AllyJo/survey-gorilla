<h3>Profile Page</h3>

<h4><%= @user.first_name %>'s Surveys</h4>

<% if @user.surveys.any? %>
<% @user.surveys.each do |survey| %>
  <ul class="user-survey-title">
     <li id="<%= survey.id %>"><a href="/surveys/<%= survey.id %>/responses"><%= survey.title %></a></li>
  </ul>
  <% end  %>

<h2 id="create-survey-link"> <a href="/surveys/new">Create New Survey</a></h2>
<% end %>
